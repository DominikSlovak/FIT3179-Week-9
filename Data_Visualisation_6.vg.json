{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Types of A",
    "description": "Scatterplot of Forest Area vs. Land Area color-coded by Forest",
    "width": 360,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/DominikSlovak/FIT3179-Week-9/main/data/fra-specificForestCategories.csv",
      "format": {"type": "csv"}
    },
    "mark": {
      "type": "point",
      "filled": true,
      "size": 60
    },
    "config": {
      "range": {"Forest": {"scheme": "category10"}},
      "axis": {"labelFontSize": 12, "titleFontSize": 14}
    },
    "encoding": {
      "x": {
        "field": "Forest Area ( km² )",
        "type": "quantitative",
        "title": "Forest Area (km²)"
      },
      "y": {
        "field": "Land Area ( km² )",
        "type": "quantitative",
        "title": "Land Area (km²)"
      },
      "color": {
        "field": "Forest",
        "type": "nominal",
        "scale": {"scheme": "category10"},
        "title": "Forest"
      },
      "tooltip": [
        {"field": "Country", "type": "ordinal", "title": "Country"},
        {"field": "Forest Area ( km² )", "type": "quantitative", "title": "Forest Area (km²)"},
        {"field": "Land Area ( km² )", "type": "quantitative", "title": "Land Area (km²)"},
        {"field": "Forest", "type": "nominal", "title": "Forest"}
      ]
    },
    "selection": {
      "panZoom": {
        "type": "interval",
        "bind": "scales"
      }
    }
  }